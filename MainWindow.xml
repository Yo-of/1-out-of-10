<Window x:Class="WpfApp.MainWindow.xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Game" Height="400" Width="600">
    <Grid>
        <!-- Output TextBox -->
        <TextBox x:Name="OutputTextBox" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Top" 
                 Height="200" 
                 IsReadOnly="True" 
                 Margin="10" 
                 TextWrapping="Wrap" />

        <!-- Input and Button -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <TextBox x:Name="GuessInput" 
                     Width="100" 
                     VerticalAlignment="Center" 
                     Margin="0,0,10,0" 
                     PlaceholderText="Enter a guess" />
            <Button Content="Guess" 
                    Width="75" 
                    Click="GuessButton_Click" />
        </StackPanel>
    </Grid>
</Window>
